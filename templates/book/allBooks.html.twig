{% extends 'base.html.twig' %}

{% block title %}Wszystkie książki{{ parent() }}{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container">
        <h1 class="h3 mb-3 font-weight-normal">Lista książek</h1>

        <table class="table">
            <thead>
            <tr>
                <th scope="col">Tytuł</th>
                <th scope="col">Autor</th>
                <th scope="col">Opis</th>
                {% if app.user %}
                <th scope="col" style="width: 10%">Opcje</th>
                {% endif %}
            </tr>
            </thead>
            <tbody>
                {% for book in allAvailableBooks %}
                    <tr>
                        <td>"{{ book.Title }}"</td>
                        <td>{{ book.Author }}</td>
                        <td>{{ book.Description }}</td>
                        {% if app.user %}
                        <td><button class="btn btn-primary mt-2">Wypożycz książkę</button></td>
                        {% endif %}
                    </tr>
                {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}
