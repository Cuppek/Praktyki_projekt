{% extends 'base.html.twig' %}

{% block title %}Twoje wypożyczone książki{{ parent() }}{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container">
        <h1 class="h3 mb-3 font-weight-normal">Lista książek</h1>

        <table class="table">
            <thead>
            <tr>
                <th scope="col">Tytuł</th>
                <th scope="col">Autor</th>
                <th scope="col">Opis</th>
            </tr>
            </thead>
            <tbody>
            {% for book in allBooks %}
                <tr>
                    <td>"{{ book.Title }}"</td>
                    <td>{{ book.Author }}</td>
                    <td>{{ book.Description }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}
